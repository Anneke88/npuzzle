<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73b539" >

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/img_main_logo"
        android:src="@drawable/npuzzle" />

    <Button
        android:id="@+id/button_main_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="startGame"
        android:text="@string/btn_play" />

    <Button
        android:id="@+id/button_main_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_main_play"
        android:layout_alignRight="@+id/button_main_play"
        android:layout_below="@+id/button_main_play"
        android:onClick="explainControls"
        android:text="@string/btn_help" />

    <Button
        android:id="@+id/button_main_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_main_help"
        android:layout_centerHorizontal="true"
        android:onClick="explainGame"
        android:text="@string/btn_about" />

</RelativeLayout>